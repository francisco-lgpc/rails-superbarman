<div class="container">
  <div class="row">
    <%= render 'search_form_index' %>

  </div>

  <div class="row">

    <% @bartenders.each_with_index do |bartender, i| %>
    <%= link_to bartender_path(bartender, party: params[:party]) do %>
    <div class="col-xs-12 col-sm-6 col-lg-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path (bartender.picture) %>);">
        <div class="card-category">
          <%= bartender.title %>
        </div>
        <div class="card-description">
          <p>
            <%= bartender.name %> <br>
            <% bartender.rating.times do %>
            <i class="fa fa-glass" aria-hidden="true"></i>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<script type="text/javascript">

  function initialize() {

  var input = document.getElementById('party_address');
  var autocomplete = new google.maps.places.Autocomplete(input);
  }

  $(document).ready(function() {
